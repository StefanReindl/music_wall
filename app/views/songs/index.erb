<% if @user %>
	<h3>Welcome <% @user.username %>!</h3>
	<a href="/songs/new">Post a song... It's FREE (for now)!</a>
<% else %>
	<a href="/users/signup">Signup here!</a>
	<a href="/users/login">Existing users login here.</a>
<% end %>

<% @songs.each do |song| %>
  <div class="song">
    <h3><h3><a href="/songs/<%= song.id %>"><%= song.title %></a> <small>(by: <%= song.author %>)</small></h3></h3>
    <p>
     <a href= "<%= song.url %>"><%= song.url %></a>
    </p>
  </div>
<% end %>